<%- layout('layouts/boilerplate.ejs') %>
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" name="campground[title]" id="title"
                        placeholder="enter title" required />
                        <div class="valid-feedback">
                            Looks Good!!
                        </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location"
                        placeholder="enter a location" required />
                        <div class="valid-feedback">
                            Looks Good!!
                        </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input class="form-control" type="url" name="campground[image]" id="image"
                        placeholder="enter the image url" required />
                        <div class="valid-feedback">
                            Looks Good!!
                        </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="campground[description]" id="description" cols="3"
                        placeholder="enter a description of the camp" required></textarea>
                        <div class="valid-feedback">
                            Looks Good!!
                        </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" >$</span>
                        <input name="campground[price]" type="text" class="form-control" placeholder="0.00"
                            id="price" required />
                            <div class="valid-feedback">
                                Looks Good!!
                            </div>
                    </div>
                </div>
                <button class="btn btn-success" type="submit">Add Campground</button>
                <div class="mb-3">
                    <a href="/campgrounds">Back To Index</a>
                </div>
            </form>
        </div>
    </div>